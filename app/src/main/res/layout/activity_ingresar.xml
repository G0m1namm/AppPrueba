<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pruebas.appprueba.IngresarActivity">

    <TextView
        android:id="@+id/lblIdentificacion"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_toLeftOf="@+id/edtIdentificacion"
        android:layout_toStartOf="@+id/edtIdentificacion"
        android:gravity="left|center_vertical"
        android:text="Id:" />

    <EditText
        android:id="@+id/edtId"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/lblConocimiento"
        android:layout_toRightOf="@+id/lblConocimiento"
        android:inputType="number" />

    <TextView
        android:id="@+id/lblConocimiento"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblIdentificacion"
        android:gravity="left|center_vertical"
        android:text="Conocimiento: " />

    <EditText
        android:id="@+id/edtConocimiento"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/lblIdentificacion"
        android:layout_toEndOf="@+id/btnRegresar"
        android:layout_toRightOf="@+id/btnRegresar" />

    <Button
        android:id="@+id/btnIngresarConocimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblConocimiento"
        android:text="Ingresar" />

    <ImageView
        android:id="@+id/btnRegresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lblConocimiento"
        android:layout_alignRight="@+id/lblConocimiento"
        android:layout_below="@+id/btnIngresarConocimiento"
        android:layout_marginTop="264dp"
        app:srcCompat="@drawable/btnreturn" />

</RelativeLayout>
